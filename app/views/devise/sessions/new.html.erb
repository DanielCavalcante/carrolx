<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-md-4">
    <h2>Log in</h2>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-inline">
        <%= f.check_box :remember_me, class:"checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="row">
      <%= f.submit "Log in", class:"btn btn-primary btn-block" %>
    </div>
    <div class="row">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-link btn-block" %>
    </div>
    <div class="row">
      <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-link btn-block" %>
    </div>
  </div>
<% end %>
